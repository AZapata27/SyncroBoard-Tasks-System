    "@types/passport-jwt": "^3.0.13",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "~8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "18.0.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "typescript": "~5.2.2"
