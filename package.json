{
  "name": "syncroboard-monorepo",
  "version": "1.0.0",
  "description": "SyncroBoard Tasks Management System - Monorepo",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "lint": "nx lint",
    "format": "nx format:write",
    "affected:test": "nx affected --target=test",
    "affected:build": "nx affected --target=build",
    "affected:lint": "nx affected --target=lint",
    "infra:up": "docker-compose up -d",
    "infra:down": "docker-compose down",
    "infra:logs": "docker-compose logs -f",
    "dev:auth": "nx serve auth-service",
    "dev:gateway": "nx serve gateway",
    "dev:ticket": "nx serve ticket-service",
    "dev:assignment": "nx serve assignment-service",
    "dev:notification": "nx serve notification-service",
    "build:all": "nx run-many --target=build --all",
    "test:all": "nx run-many --target=test --all",
    "lint:all": "nx run-many --target=lint --all"
  },
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@nx/eslint": "^18.0.0",
